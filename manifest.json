{
    "manifest_version": 3,
    "name": "Slither Score",
    "version": "1.0.0",
    "description": "Add On pour concours slither.io",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "contextMenus",
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "https://www.slither.io/*"
    ],
    "web_accessible_resources": [
        {
          "matches": ["<all_urls>"],
          "resources": [
            "content/gui/main-gui.js",
            "content/messages/handle-messages.js",
            "content/messages/send-messages.js",
            "content/events/eventNames.js",
            "content/events/handle-events.js",
            "content/gui/components/continue-session-overlay.js",
            "content/gui/components/end-turn-display.js",
            "content/gui/components/error-overlay.js",
            "content/gui/components/loading-overlay.js",
            "content/gui/components/new-turn-display.js",
            "content/gui/components/start-session-overlay.js",
            "utils/player-service.js",
            "utils/local-datas.js",
            "models/models.js"
          ]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["http://slither.io/*"],
            "js": [
                "content/content-script.js"
            ],
            "type": "module"
        }
    ]     
}