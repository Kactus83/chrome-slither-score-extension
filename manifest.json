{
    "manifest_version": 3,
    "name": "Slither Score",
    "version": "1.0.0",
    "description": "Add On pour concours slither.io",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "contextMenus",
        "scripting",
        "notifications"
    ],
    "host_permissions": [
        "https://www.slither.io/*"
    ],
    "web_accessible_resources": [{
        "matches": ["<all_urls>"],
        "resources": ["gui/main-gui.js"]
    }],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["http://slither.io/*"],
            "js": [
                "content-script.js"
            ],
            "type": "module"
        }
    ]     
}